class Solution {
    bool isPossible(vector<int>& arr, int sum,int m)
    {
        int cnt=1,n=arr.size(),currSum=0;
        for(int i=0;i<n;i++)
        {
            if(arr[i]>sum) return false;
            if(currSum+arr[i]>sum)
            {
                cnt++;
                currSum=arr[i];
            }
            else currSum+=arr[i];
        }
        if(cnt<=m) return true;
        else return false;
    }
public:
    int splitArray(vector<int>& arr, int m) {
        int mini = INT_MAX,sum=0;
        int n= arr.size();
        for(int i=0;i<n;i++)
        {
            sum+=arr[i];
            mini = min(mini, arr[i]);
        }
        
        int lo = mini, hi = sum,res=0;
        while(lo<=hi)
        {
            int mid = (lo+hi)/2;
            if(isPossible(arr,mid,m))
            {
                res=mid;
                hi = mid-1;
            }
            else
                lo = mid+1;
        }
        
        return res;
    }
};
