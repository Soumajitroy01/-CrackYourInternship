class Solution {
    vector<vector<char>> g;
    int n,m;
    string s;
    bool dfs(int i,int j,int count)
    {
        if(count==s.length()) return true;
        if(i<0 || j<0 || i>=n || j>=m || g[i][j]!=s[count]) return false;
        
        char temp = g[i][j];
        g[i][j]=' ';
        bool found = dfs(i+1,j,count+1) ||
            dfs(i,j+1,count+1) ||
            dfs(i-1,j,count+1) ||
            dfs(i,j-1,count+1);
        g[i][j] = temp;
        return found;
    }
public:
    bool exist(vector<vector<char>>& b, string word) {
        n=b.size();
        m=b[0].size();
        g=b;
        s=word;
        
        for(int i=0;i<n;i++)
            for(int j=0;j<m;j++)
                if(b[i][j]==word[0] && dfs(i,j,0))
                    return true;
        
        return false;
    }
};
