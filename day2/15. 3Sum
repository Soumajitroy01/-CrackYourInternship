class Solution {
public:
    vector<vector<int>> threeSum(vector<int>& a) {
        sort(a.begin(),a.end());
        int n = a.size();
        vector<vector<int>> res;
        if(n<3) return res;
        
        for(int i=0;i<n;i++)
        {
            if(i>0 && a[i]==a[i-1])
                continue;
            int lo = i+1, hi = n-1;
            while(lo<hi)
            {
                int sum = a[i]+a[lo]+a[hi];
                if(sum==0)
                {
                    res.push_back({a[i],a[lo++],a[hi--]});
                    while(lo < hi and a[lo] == a[lo-1]) lo++; // to avoid repetition
                    while(lo < hi and a[hi] == a[hi+1]) hi--;
                }
                else if(sum<0) lo++;
                else hi--;
            }
        }
        
        return res;
    }
};
