class Solution {
public:
    vector<int> spiralOrder(vector<vector<int>>& a) {
        vector<int>ans;
        int m=a.size();       //Number of rows
        int n=a[0].size();   //Number of columns
        int sr=0;               //starting row
        int sc=0;               //starting column
        int er=m-1;          //ending row
        int ec=n-1;          //ending column
        while(sr<=er && sc<=ec)
        {
            for(int i=sc;i<=ec;i++)            //left to right
            {
               
                ans.push_back(a[sr][i]);
            }
            sr++;
            for(int i=sr;i<=er;i++)           //top to bottom
            {
               
                ans.push_back(a[i][ec]);
            }
            ec--;
            if(er>=sr){                               // tricky edge case
            for(int i=ec;i>=sc;i--)             //right to left
            {
                
                ans.push_back(a[er][i]);
            }
            er--;
            }
            if(ec>=sc){                         // again tricky edge case
            for(int i=er;i>=sr;i--)         //bottom to up
            {
                
                ans.push_back(a[i][sc]);
            }
            sc++;
            }

        }
        return ans;
    }
};
