class Solution {
public:
    int maxScore(vector<int>& a, int k) {
        int n=a.size(),sum=0;
        for(int i=0;i<k;i++)sum+=a[i];
        int l=k-1,r=n-1;
        int res=sum;
        for(int i=0;i<k;i++){
            sum-=a[l--];
            sum+=a[r--];
            res=max(res,sum);
        }
        return res;
    }
};
