class Solution {
public:
    vector<vector<int>> fourSum(vector<int>& a, int target) {
        sort(a.begin(),a.end());
        int n = a.size();
        vector<vector<int>> res;
        if(n<3) return res;
        
        for(int i=0;i<n;i++)
        {
            if(i>0 && a[i]==a[i-1])
                continue;
            
            for(int j= i+1;j<n;j++)
            {
                if(j>i+1 && a[j]==a[j-1])
                    continue;
                
                int lo = j+1, hi = n-1;
                int t = target - (a[i]+a[j]);
                
                while(lo<hi)
                {
                    int sum = a[lo]+a[hi];
                    
                    if(sum==t)
                    {
                        res.push_back({a[i],a[j],a[lo++],a[hi--]});
                        while(lo < hi and a[lo] == a[lo-1]) lo++; // to avoid repetition
                        while(lo < hi and a[hi] == a[hi+1]) hi--;
                    }
                    else if(sum<t) lo++;
                    else hi--;
                }
            }
        }
        
        return res;
    }
};
