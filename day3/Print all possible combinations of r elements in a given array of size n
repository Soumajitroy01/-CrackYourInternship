#include <bits/stdc++.h>
using namespace std;
void combinationUtil(int arr[], int start, int end, int data[], int index, int r)
{
    if (index == r)
    {
        for (int i = 0; i < r; i++)
            cout << data[i] << " ";
        cout << "\n";
        return;
    }

    for (int i = start; i <= end && end - i + 1 >= r - index; i++)
    {
        data[index] = arr[i];
        combinationUtil(arr, i + 1, end, data, index + 1, r);
    }
}
void printCombination(int arr[], int n, int r)
{
    int data[r];
    combinationUtil(arr, 0, n - 1, data, 0, r);
}
int main()
{
    int arr[] = {1, 2, 3, 4, 5};
    int r = 3;
    int n = sizeof(arr) / sizeof(arr[0]);
    printCombination(arr, n, r);
}
