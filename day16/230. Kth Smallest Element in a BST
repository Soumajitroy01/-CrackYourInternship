class Solution {
    int ptr=0;
public:
    int kthSmallest(TreeNode* root, int k) {
        if(root==NULL) return -1;
        int left = kthSmallest(root->left,k);
        if(left!=-1)
            return left;
        if(++ptr==k)
            return root->val;
        return kthSmallest(root->right,k);
    }
};

static bool     _foo = ios::sync_with_stdio(false);
static ostream* _bar = cin.tie(NULL);
