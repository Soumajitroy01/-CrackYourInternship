class Solution {
public:
    int helper(vector<int>& arr1, vector<int>& arr2, int n1, int n2)
    {
        int dp[n1+1][n2+1];
        int maxi = 0;
        
        for(int i = 0; i <= n1; i++)
        {
            dp[i][0] = 0;
        }
        
        for(int j = 0; j <= n2; j++)
        {
            dp[0][j] = 0;
        }
        
        for(int i = 1; i <= n1; i++)
        {
            for(int j = 1; j <= n2; j++)
            {
                if(arr1[i-1] == arr2[j-1])
                    dp[i][j] = 1 + dp[i-1][j-1];
                
                else if(arr1[i-1] != arr2[j-1])
                {
                    dp[i][j] = 0;
                }
                
                maxi = max(maxi,dp[i][j]);
            }
        }
        
        return maxi;
    }
    
    int findLength(vector<int>& arr1, vector<int>& arr2) {
        int n1 = arr1.size();
        int n2 = arr2.size();
        
        return helper(arr1,arr2,n1,n2);
    }
};

static bool     _foo = ios::sync_with_stdio(false);
static ostream* _bar = cin.tie(NULL);
