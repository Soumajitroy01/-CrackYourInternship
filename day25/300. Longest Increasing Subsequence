class Solution {
public:
    int lengthOfLIS(vector<int>& nums) {
        ios::sync_with_stdio(false);
        cin.tie(NULL);
        cout.tie(NULL);
        int n = nums.size();
        vector<int> ans;
        
        for(int i=0; i<n; i++) {
            auto it = lower_bound(ans.begin(), ans.end(), nums[i]);
            if(it == ans.end()) {
                ans.push_back(nums[i]);
            } else {
                *it = nums[i];
            }
        }
        
        return ans.size();
    }
};
