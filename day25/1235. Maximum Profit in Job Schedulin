class Solution {
    static bool cmp(vector<int>& a, vector<int>& b)
    {
        return a[1]<b[1];
    }
public:
    int jobScheduling(vector<int>& startTime, vector<int>& endTime, vector<int>& profit) {
        ios::sync_with_stdio(false);
        cin.tie(NULL);
        cout.tie(NULL);
        int n = startTime.size();
        vector<vector<int>> v(n);
        for(int i=0;i<n;i++)
        {
            int x = startTime[i];
            int y = endTime[i];
            int z = profit[i];
            v[i] = {x,y,z};
        }
        
        sort(v.begin(),v.end(), cmp);
        vector<int> dp(n);
        dp[0] = v[0][2];
        for(int i=1;i<n;i++)
        {
            int inc = v[i][2];
            int last = -1;
            int lo = 0;
            int hi = i-1;
            while(lo<=hi)
            {
                int mid = (lo+hi)/2;
                if(v[mid][1] <= v[i][0])
                {
                    last = mid;
                    lo = mid+1;
                }
                else hi = mid-1;
            }
            if(last!=-1) inc+=dp[last];
            int exc = dp[i-1];
            dp[i] = max(inc,exc);
        }
        
        return dp[n-1];
    }
};
