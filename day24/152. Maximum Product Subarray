class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int n = nums.size();
        int prod=1,ans=INT_MIN;
        for(int i=0;i<n;i++)
        {
            if(nums[i])
            {
                prod *= nums[i];
                ans = max(ans, prod);
            }
            else
            {
                prod = 1;
                ans = max(ans, 0);
            }
        }
        prod = 1;
        for(int i=n-1;i>=0;i--)
        {
            if(nums[i])
            {
                prod *= nums[i];
                ans = max(ans, prod);
            }
            else
            {
                prod = 1;
                ans = max(ans, 0);
            }
        }
        
        return ans;
    }
};

static bool     _foo = ios::sync_with_stdio(false);
static ostream* _bar = cin.tie(NULL);
