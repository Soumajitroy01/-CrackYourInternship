class Solution {
public:
    int trap(vector<int>& height) {
        if(height.size() < 3)
            return 0;
        
        int l = 0;
        int r = height.size() - 1;
        int lmax = height[0];
        int rmax = height[height.size()-1];
        int res=0;
        
        while(l<=r)
        {
            if(lmax<=rmax)
            {
                if(lmax<height[l])
                    lmax = height[l];
                else res += lmax - height[l];
                l++;
            }
            else
            {
                if(rmax<height[r])
                    rmax = height[r];
                else res += rmax - height[r];
                r--;
            }
        }
        
        return res;
    }
};

static bool     _foo = ios::sync_with_stdio(false);
static ostream* _bar = cin.tie(NULL);
