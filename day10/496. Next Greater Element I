class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& arr1, vector<int>& arr2) {
        int n = arr2.size();
        stack<int> st;
        map<int , int> mp;
        
        for(int i = n - 1; i >=0 ; i--){
            if(st.size() == 0){
               mp[arr2[i]] = (-1);
                st.push(arr2[i]);
            }
            else {
                if(st.top() > arr2[i]){
                    mp[arr2[i]] = (st.top());
                    st.push(arr2[i]);
                }
                else{
                    while(st.size() > 0){
                        if(st.top() > arr2[i]){
                            mp[arr2[i]] = (st.top());
                            st.push(arr2[i]);
                            break;
                        }
                        else st.pop();
                    }
                     if(st.size() == 0){
                       mp[arr2[i]] = (-1);
                        st.push(arr2[i]);
                    }
                }
            }
        }
        vector<int> ans;
        
        for(int i = 0 ; i< arr1.size() ; i++)
             ans.push_back(mp[arr1[i]]);       
         return ans;
    }
};
