class Solution {
public:
    string addBinary(string a, string b) {
        string larger=a.size()>=b.size()?a:b;
        string smaller=a.size()<b.size()?a:b;
        int padding=larger.size()-smaller.size();
        while(padding--){
            smaller="0"+smaller;
        }
        int carry=0;
        string result="";
        for(int i=larger.size()-1;i>=0;i--){
            int a=larger[i]-'0';
            int b=smaller[i]-'0';
            switch(a+b+carry){
                case 0:
                carry=0;
                result="0"+result;
                break;
                case 1:
                carry=0;
                result="1"+result;
                carry=0;
                break;
                case 2:
                carry=1;
                result="0"+result;
                break;
                case 3:
                carry=1;
                result="1"+result;
                break;
            }
        }
        
        if(carry>0)result=to_string(1)+result;
        return result;
    }
};
