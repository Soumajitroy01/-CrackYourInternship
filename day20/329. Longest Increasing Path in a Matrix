class Solution {
    vector<vector<int>> dp;
    int m,n;
    int dx[4] = {-1,0,0,1};
    int dy[4] = {0,-1,1,0};
    bool isSafe(int i,int j)
    {
        return (i>=0 && j>=0 && i<m && j<n);
    }
    int findIncreasingPath(int i, int j, vector<vector<int>>& mat)
    {
        if(dp[i][j]) return dp[i][j];
        
        int ans=0;
        for(int k=0;k<4;k++)
        {
            int xi = i+dx[k];
            int yi = j+dy[k];
            if(isSafe(xi,yi) && mat[xi][yi] > mat[i][j])
                ans=max(ans, findIncreasingPath(xi,yi,mat));
        }
        ans++;
        dp[i][j]=ans;
        return dp[i][j];
    }
public:
    int longestIncreasingPath(vector<vector<int>>& mat) {
        m= mat.size(),n = mat[0].size();
        dp = vector<vector<int>>(m,vector<int>(n,0));
        
        int ans=0;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
                ans=max(ans, findIncreasingPath(i,j,mat));
        }
        
        return ans;
    }
};

static bool     _foo = ios::sync_with_stdio(false);
static ostream* _bar = cin.tie(NULL);
