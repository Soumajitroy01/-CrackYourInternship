class Solution {
public:
	int isNegativeWeightCycle(int n, vector<vector<int>>edges){
	    // Code here
	    vector<int> dist(n,1e9);
	    dist[0]=0;
	    for(int i=1;i<=n-1;i++)
	    {
	        for(auto edge:edges)
	        {
	            int u = edge[0], v= edge[1], wt = edge[2];
	            if(dist[u] + wt < dist[v])
	                dist[v] = dist[u] + wt;
	        }
	    }
	    
	    for(auto edge:edges)
	    {
	        int u = edge[0], v= edge[1], wt = edge[2];
	        if(dist[u] + wt < dist[v])
	            return 1;
	    }
	    
	    return 0;
	}
};
