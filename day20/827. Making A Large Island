class Solution {
    int n;
    int dx[4] = {-1,0,0,1};
    int dy[4] = {0,-1,1,0};
    bool isSafe(int x, int y)
    {
        return (x>=0 && y>=0 && x<n && y<n);
    }
    int dfs(int x,int y,int id, vector<vector<int>>& grid)
    {
        grid[x][y]= id;
        int ans=1;
        for(int i=0;i<4;i++)
        {
            int xi = x + dx[i];
            int yi = y + dy[i];
            if(isSafe(xi,yi) && grid[xi][yi]==1)
                ans+=dfs(xi,yi,id,grid);
        }
        return ans;
    }
public:
    int largestIsland(vector<vector<int>>& grid) {
        n=grid.size();
        unordered_map<int,int> mp;
        int id=2;
        int ans=0;
        
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(grid[i][j]==1)
                {
                    int sz = dfs(i,j,id,grid);
                    ans = max(ans,sz);
                    mp[id] = sz;
                    id++;
                }
            }
        }
        
        for(int i=0;i<n;i++)        
        {
            for(int j=0;j<n;j++)
            {
                if(grid[i][j]==0)
                {
                    int res=1;
                    set<int> st;
                    for(int k =0;k<4;k++)
                    {
                        int x = i+dx[k];
                        int y = j+dy[k];
                        
                        if(isSafe(x,y) && grid[x][y]>1 && 
                           st.find(grid[x][y])==st.end())
                        {
                            st.insert(grid[x][y]);
                            res+=mp[grid[x][y]];
                        }
                    }
                    ans = max(ans,res);
                }
            }
        }
        return ans;
    }
};

static bool     _foo = ios::sync_with_stdio(false);
static ostream* _bar = cin.tie(NULL);
