class Solution {
public:
    vector<pair<int,int>> dir{{1,0},{-1,0},{0,1},{0,-1}};
    vector<vector<int>> vis;
    
    bool isValid(int i,int j,int m,int n) {
        return i >= 0 && i < m && j >= 0 && j < n;
    }
    
    void dfs(int i,int j,int m,int n,int initialCol,int newCol,vector<vector<int>> &image) 
    {
        vis[i][j] = 1;
        image[i][j] = newCol;
        for(auto &[dx,dy] : dir) {
            int x = i + dx;
            int y = j + dy;
            if(isValid(x,y,m,n) && !vis[x][y] && image[x][y] == initialCol)             {
                dfs(x,y,m,n,initialCol,newCol,image);
            }
        }
    }
    
    vector<vector<int>> floodFill(vector<vector<int>>& image, int sr, int sc, int newColor) 
    {
        int m = image.size();
        int n = image[0].size();
        int initialCol = image[sr][sc];
        vis = vector<vector<int>> (m,vector<int>(n,0));
        dfs(sr,sc,m,n,initialCol,newColor,image);
        return image;
    }
};
