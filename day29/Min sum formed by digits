class Solution{
    public:
    long long int minSum(int arr[], int n)
    {
        // Your code goes here
        sort(arr, arr+n);
        long long a=0;
        long long b=0;
        for(int i=0;i<n-1;i+=2)
        {
            a = a*10+arr[i];
            b = b*10+arr[i+1];
        }
        if(n%2==0)
            return a + b;
        else
        {
            a = a*10+arr[n-1];
            return a+b;
        }
    }
};
