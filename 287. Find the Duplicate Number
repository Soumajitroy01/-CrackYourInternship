class Solution {
public:
    int findDuplicate(vector<int>& nums) {
        int slow = nums[0], fast = nums[0];
        //detect cycle
        do
        {
            slow = nums[slow];
            fast = nums[nums[fast]];
        }while(slow!=fast);
        
        slow = nums[0];
        //detect original duplicate
        while(slow!=fast)
        {
            slow = nums[slow];
            fast = nums[fast];
        }
        
        //return any one fast or slow
        return slow;
    }
};
