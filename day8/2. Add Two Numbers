class Solution {
private:
    int count(ListNode *head)
    {
        int count = 0;
        while (head != NULL)
        {
            count++;
            head = head->next;
        }
        return count;
    }
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        if(l1 == NULL && l2 == NULL)return NULL ;
        if(l1 == NULL)return l2 ;
        if(l2 == NULL)return l1 ;
        
        ListNode *cur1,*cur2;
        if(count(l1) > count(l2))
        {
            cur1 = l1;
            cur2 = l2;
        }
        else
        {
            cur1 = l2;
            cur2 = l1;
        }
        
        int carry=0;
        ListNode *prev = NULL;
        
        while(cur1!=NULL and cur2!=NULL)
        {
            int sum = cur1->val + cur2->val + carry;
            if(sum >9)
            {
                cur1->val = sum%10;
                carry=1;
            }
            else
            {
                cur1->val = sum;
                carry=0;
            }
            prev = cur1;
            cur1=cur1->next;
            cur2=cur2->next;
        }
        while(cur1 != NULL)
        {
            int sum = cur1->val + carry ; 
            if(sum > 9)
            {
                cur1->val = sum%10 ; 
                carry  =1 ; 
            }
            else
            {
                cur1->val = sum ; 
                carry = 0 ;  
            }
            prev = cur1 ; 
            cur1 = cur1->next ;
        }
        if(carry==1)
            prev->next = new ListNode(1);
        return (count(l1)>count(l2))? l1:l2;
    }
};
