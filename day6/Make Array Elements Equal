#include <bits/stdc++.h>
int findMinimumCost(vector<int> &arr, int n)
{
    // Write your code here
    int y;
    sort(arr.begin(),arr.end());
    if(n%2) y=arr[n/2];
    else y = (arr[n/2]+arr[(n-2)/2])/2;

    int cost=0;
    for(int i=0;i<n;i++)
    {
        cost+=abs(arr[i]-y);
    }

    return cost;
}
