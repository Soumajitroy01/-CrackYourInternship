#include <bits/stdc++.h>
#define int long long int
#define vi vector<int>
using namespace std;

bool isPossible(vi &a,int c,int dist)
{
    int n = a.size();
    int pos = a[0],cnt=1;
    for(int i=1;i<n;i++)
    {
        if(a[i]-pos>=dist)
        {
            pos = a[i];
            cnt++;
        }
        if(cnt==c) return true;
    }
    return false;
}

signed main() {
    // your code goes here
    int t;
    cin>>t;
    while(t--)
    {
        int n,c;
        cin>>n>>c;
        vi a(n);
        for(auto &i:a)
        {
            cin>>i;
        }
        sort(a.begin(),a.end());

        int lo=0,hi = a[n-1]-a[0],res=0;
        while(lo<=hi)
        {
            int mid = (lo+hi)/2;
            if(isPossible(a,c,mid)){
                res=mid;
                lo = mid+1;
            }
            else
                hi = mid-1;
        }

        cout<<res<<"\n";
    }
    return 0;
}
