class Solution {
public:
    int findPeakElement(vector<int>& arr) {
        int low = 0, high = arr.size()-1,n=arr.size();
        
        while(low<=high){
            int mid =  (high+low)/2;

            if((mid==0||arr[mid]>arr[mid-1]) && (mid==n-1||arr[mid]>arr[mid+1]))
                return mid;
            else if(mid>0 && arr[mid]<=arr[mid-1] && mid<n-1 && arr[mid]>arr[mid+1])
                high = mid-1;
            else if(mid>0 && arr[mid]>arr[mid-1] && mid<n-1 && arr[mid]<=arr[mid+1])
                low = mid+1;
            else if(mid==0) low = mid+1;
            else high = mid-1;
        }
        return high;
    }
};
