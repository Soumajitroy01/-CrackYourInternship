class Solution {
public:
    string simplifyPath(string path) {
        stack<string> st;
        
        for(int i=0;i<path.size();i++){
            
               if(path[i] == '/') continue;
               string s;
               while(i<path.size() && path[i] != '/'){
                      s+= path[i++];
               }
            
               if(s == ".."){
                    if(!st.empty()){
                         st.pop();
                    }
               }
              else if(s == "."){
                   continue;
              }
              else if(s.size() > 0){
                    st.push(s);
              }
        }
        
        string ans;
        
        while(!st.empty()){
             ans = st.top() + "/" + ans;
             st.pop();
        }
        ans = "/" + ans;
        
        if(ans.size() == 1) return ans;
        
        ans.pop_back();
        return ans;
    }
};
